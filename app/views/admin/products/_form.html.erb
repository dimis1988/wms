  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

   <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image,class:"form-control-file"  %>
  </div>


  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class:"form-control" %>
  </div>

  <div>
    <%= form.label :product_category, style: "display: block" %>
    <%= form.select :product_category_id, ProductCategory.all.map { |cat| [cat.name, cat.id] }, :prompt => "Select Category" %>
  </div>


  <div>
    <%= form.label :active, style: "display: block" %>
    <%= form.check_box :active %>
  </div>

  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
